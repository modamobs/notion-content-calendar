# Notion API Configuration
# Use an Internal Integration token from https://www.notion.so/my-integrations
# It typically starts with "secret_"
NOTION_API_KEY=secret_your_integration_token_here

# 32-character database ID (from the Notion database URL)
NOTION_DATABASE_ID=your_32_character_database_id_here

# Optional: Pin a specific data source ID if your database has multiple
# NOTION_DATA_SOURCE_ID=your_data_source_id_here

# Server Configuration
# Default dev port. You can change this if the port is busy.
PORT=5178

# Mock mode: when true, serves mock data at /api/notion/* for UI testing
NOTION_MOCK=false
